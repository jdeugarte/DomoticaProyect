<h1>Lista De Configuraciones</h1>
 <table class="table">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Temperatura</th>
      <th>Intervalo</th>
      <th>Id_Thermostato</th>
      <th>Desde</th>
      <th>Hasta</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody >
    <% @alerts.each do |alert| %>
      <tr>
        <td><%= alert.config_date %></td>
        <td><%= alert.temperature %></td>
        <td><%= alert.interval %></td>
        <td><%= alert.thermostat_id %></td>
        <td><%= alert.config_time_initial.strftime("%H:%M:%S Hrs.") %></td>
        <td><%= alert.config_time_final.strftime("%H:%M:%S Hrs.") %></td>
        <td><a href="/alerts/alert_edit/<%=alert.id%>">Editar</a></td>
        <td><a href="/alerts/destroy/<%=alert.id%>">Eliminar</a></td>
      </tr>
    <% end %>
  </tbody>
</table>