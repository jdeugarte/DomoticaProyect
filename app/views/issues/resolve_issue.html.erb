
<div class="container"> 
  <div class="row">
    <div class="col-lg-12">
      <div class="page-header">
        <h1 id="forms"><center>Resolver Problema</center></h1>
      </div>
    </div>
  </div>

  <div class="col-lg-6 col-lg-offset-3">
  	<div class="form-group">
	  <label class="control-label">Descripci√≥n: </label>
	  <textarea class="form-control" rows="3" id="textArea" name="description" cols="50" readonly><%= @my_issue.description %></textarea>
	</div>
	<%= form_tag("/issues/save_resolve_issue", method: "post") do %>
	  <fieldset>
	    <input type="HIDDEN" name="issue_id" value="<%= @my_issue.id %>">
		<div class="form-group">
		  <label class="control-label">Respuesta: </label>
		  <textarea class="form-control" rows="3" id="textArea" name="answer" required></textarea>
		</div>
		<div class="form-group">
	      <div class="col-lg-10 col-lg-offset-2">
	        <button class="btn btn-default">Cancel</button>
	        <button type="submit" class="btn btn-primary">Submit</button>
	      </div>
	    </div>
	  </fieldset>
	<% end %>
  </div>
</div>

<%#= link_to 'Back', issues_path %>
